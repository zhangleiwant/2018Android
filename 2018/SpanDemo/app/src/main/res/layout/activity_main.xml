<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.king.zlei.spandemo.MainActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableBottom="@mipmap/ic_launcher"
        android:drawableLeft="@drawable/rotate"
        android:drawableRight="@mipmap/ic_launcher"
        android:gravity="center"
        android:text="Hello World!"/>

    <TextView android:id="@+id/html_text" android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

    <TextView android:id="@+id/span_text" android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>


</LinearLayout>
